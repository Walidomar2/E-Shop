@model Category

@{
    ViewBag.PageTitle = "Categories Management";
    ViewBag.CardTitle = "Delete Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<form asp-action="Delete" method="post">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" disabled class="form-control"/>
    </div>
    <div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-warning">Back To Index</a>
    </div>

</form>
