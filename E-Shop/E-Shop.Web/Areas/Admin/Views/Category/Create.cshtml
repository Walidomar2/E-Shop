@model Category

@{
    ViewBag.PageTitle = "Categories Management";
    ViewBag.CardTitle = "Create Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<form asp-area="Admin" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea id="mytextarea" asp-for="Description" class="form-control" ></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-warning">Back To Index</a>
    </div>

</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
        selector: '#mytextarea'
        });
    </script>
}