@model List<Category>

@{
    ViewBag.PageTitle = "Categories Management";
    ViewBag.CardTitle = "Categories List";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}



<table class="table table-hover" width="100%">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created Date</th>
        <th>Actions</th>
   
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>

            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-success">Edit</a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
<br />
<div>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create</a>
</div>
